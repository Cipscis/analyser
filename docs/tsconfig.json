{
	"include": ["assets/js/src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./assets/js/dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "../src",
		"paths": {
			"@cipscis/analyser": ["index.js"],
			"@cipscis/analyser/types": ["types/index.js"],
			"@cipscis/analyser/statistics": ["statistics.js"]
		},
	}
}